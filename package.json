{
    "name": "red",
    "displayName": "Experimental Support for Red Language",
    "description": "Syntax Coloring, Intellisense, Snippets and more",
    "version": "0.3.16",
    "publisher": "vscode-test",
    "license": "BSL-1.0",
    "repository": {
        "type": "git",
        "url": "https://github.com/red/VScode-extension"
    },
    "bugs": {
        "url": "https://github.com/red/VScode-extension/issues"
    },
    "icon": "images/icon.png",
    "engines": {
        "vscode": "^1.30.0"
    },
    "activationEvents": [
        "onLanguage:red",
        "onLanguage:reds",
        "onCommand:red.interpret",
        "onCommand:red.interpretGUI",
        "onCommand:red.compile",
        "onCommand:red.compileGUI",
        "onCommand:reds.compile",
        "onCommand:reds.compileGUI"
    ],
    "main": "./out/extension",
    "contributes": {
        "languages": [
            {
                "id": "red",
                "aliases": [
                    "Red",
                    "red"
                ],
                "extensions": [
                    ".red"
                ],
                "configuration": "./red.configuration.json"
            },
            {
                "id": "reds",
                "aliases": [
                    "Reds",
                    "reds"
                ],
                "extensions": [
                    ".reds"
                ]
            }
        ],
        "grammars": [
            {
                "language": "red",
                "scopeName": "source.red",
                "path": "./syntaxes/Red.tmLanguage.json"
            }
        ],
        "commands": [
            {
                "command": "red.commandMenu",
                "title": "Show all Red commands",
                "category": "Red"
            },
            {
                "command": "red.interpret",
                "title": "Run Red Script",
                "category": "Red"
            },
            {
                "command": "red.interpretGUI",
                "title": "Run Red Script in GUI console",
                "category": "Red"
            },
            {
                "command": "red.compile",
                "title": "Compile Red Script",
                "category": "Red"
            },
            {
                "command": "red.compileGUI",
                "title": "Compile Red Script in GUI mode",
                "category": "Red"
            },
            {
                "command": "reds.compile",
                "title": "Compile Red/System Script",
                "category": "Red/System"
            },
            {
                "command": "reds.compileGUI",
                "title": "Compile Red/System Script in GUI mode",
                "category": "Red/System"
            }
        ],
        "keybindings": [
            {
                "command": "red.interpret",
                "key": "F6"
            },
            {
                "command": "red.compile",
                "key": "F7"
            },
            {
                "command": "reds.interpret",
                "key": "F6"
            },
            {
                "command": "reds.compile",
                "key": "F7"
            },
            {
                "command": "red.commandMenu",
                "key": "ctrl+k ctrl+m"
            }
        ],
        "menus": {
            "editor/context": [
                {
                    "when": "resourceLangId == red",
                    "command": "red.interpret",
                    "group": "Red"
                },
                {
                    "when": "resourceLangId == red",
                    "command": "red.compile",
                    "group": "Red"
                },
                {
                    "when": "resourceLangId == reds",
                    "command": "reds.compile",
                    "group": "Red/System"
                }
            ],
            "explorer/context": [
                {
                    "when": "resourceLangId == red",
                    "command": "red.interpret",
                    "group": "Red"
                },
                {
                    "when": "resourceLangId == red",
                    "command": "red.compile",
                    "group": "Red"
                },
                {
                    "when": "resourceLangId == reds",
                    "command": "reds.compile",
                    "group": "Red/System"
                }
            ]
        },
        "configuration": {
            "type": "object",
            "title": "Red Configuration",
            "properties": {
                "red.redPath": {
                    "type": "string",
                    "default": "",
                    "description": "Path to Red toolchain"
                },
                "red.buildDir": {
                    "type": "string",
                    "default": "",
                    "description": "Directory to put compiling result of Red Source file. If not set, use workspace root directory by default."
                },
                "red.devOptions": {
                    "type": "array",
                    "default": [],
                    "description": "Advanced options used to enable new features or produce detailed diagnostics to identify extension issues."
                },
                "red.autoComplete": {
                    "type": "boolean",
                    "default": true,
                    "description": "Whether to enable or disable autocompletion."
                },
                "red.rls-debug": {
                    "type": "boolean",
                    "default": false,
                    "description": "Whether to enable or disable 'Red language server' debug."
                },
                "red.server.trace.server": {
                    "scope": "window",
                    "type": "string",
                    "enum": [
                        "off",
                        "messages",
                        "verbose"
                    ],
                    "default": "off",
                    "description": "Traces the communication between VS Code and the language server."
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "dependencies": {
        "vscode-languageclient": "^5.2.1"
    },
    "devDependencies": {
        "typescript": "^3.2.2",
        "vscode": "^1.1.26",
        "tslint": "^5.11.0",
        "@types/node": "^10.12.15",
        "@types/mocha": "^5.2.5"
    }
}
